@using BlazorApp.Models
<h3>EmployeeDetailComponent</h3>
<p>
    Name: @Employee.Name
</p>
<p>
    Title: @Employee.Title
</p>
<p>
    Department: @Employee.Department
</p>
@code {
    [Parameter]
    public Employee Employee { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        this.Employee.LoadRecord();
    }

}